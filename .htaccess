RewriteEngine On

# Redirigir las solicitudes desde "/archivo.php" a "/archivo"
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^([^/]+)/?$ $1.php [L]

# Redirigir las solicitudes desde "/archivo/" a "/archivo"
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^([^/]+)/$ $1 [L]
